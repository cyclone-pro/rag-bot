# Telnyx Configuration
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_PHONE_NUMBER=+1234567890
TELNYX_CONNECTION_ID=your_telnyx_connection_id
TELNYX_WEBHOOK_SECRET=your_webhook_secret

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GCS_BUCKET_NAME=recruiterbrain-audio

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recruiterbrain
POSTGRES_USER=recruiterbrain_user
POSTGRES_PASSWORD=your_postgres_password

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
BASE_URL=https://your-domain.com

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com/webhooks

# Calendly Configuration (optional)
CALENDLY_API_KEY=your_calendly_api_key
CALENDLY_EVENT_TYPE=interview-scheduling

# Interview Configuration
MAX_INTERVIEW_DURATION_MINUTES=12
DEFAULT_QUESTIONS_COUNT=6
SILENCE_THRESHOLD_THINKING=3
SILENCE_THRESHOLD_PROMPT=7
SILENCE_THRESHOLD_SKIP=15

# Embedding Model Configuration
EMBEDDING_MODEL=intfloat/e5-base-v2
EMBEDDING_DIMENSION=768

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/interview.log

# Monitoring (optional)
SENTRY_DSN=
DATADOG_API_KEY=
